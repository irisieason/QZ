/* Import design tokens */
@import '../../tokens/tokens.css';

.status-history-chart {
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 16px;
  width: 100%;
  max-width: 100%; /* 确保不超过父容器 */
  min-width: 300px;
  height: 332px; /* 固定高度保持图表比例 */
  border-radius: 4px;
  box-sizing: border-box;
}

/* 标题栏 */
.status-history-chart__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  width: 100%;
}

.status-history-chart__title {
  flex: 1 0 0;
  font-family: var(--typography-family-font-sans, 'Siemens Sans Global', sans-serif);
  font-weight: var(--font-weight-font-weight-bold, 700);
  font-size: var(--font-size-ms-0, 14px);
  line-height: 1.43;
  letter-spacing: 0.168px;
  color: var(--color-std-text, white);
}

.status-history-chart__buttons {
  display: flex;
  gap: 0;
}

/* 图表区域 */
.status-history-chart__chart {
  display: flex;
  gap: 4px;
  flex: 1 0 0;
  min-height: 1px;
  width: 100%;
}

/* Y轴刻度 */
.status-history-chart__y-axis {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 25px;
  padding: 9px 0;
  flex-shrink: 0;
}

.status-history-chart__y-tick {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 0;
  font-family: var(--typography-family-font-sans, 'Siemens Sans Global', sans-serif);
  font-weight: var(--font-weight-font-weight-bold, 700);
  font-size: var(--font-size-ms--1, 12px);
  line-height: 1.5;
  letter-spacing: 0.144px;
  color: var(--color-std-text, white);
  text-align: right;
}

/* 图表画布 */
.status-history-chart__canvas {
  flex: 1 0 0;
  min-width: 1px;
  position: relative;
  height: 200px; /* 固定高度 */
}

.status-history-chart__svg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* 垂直网格线容器 */
.status-history-chart__grid-lines-vertical {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  pointer-events: none;
}

.status-history-chart__grid-line-vertical {
  width: 1px;
  height: 100%;
  background-color: var(--chart-grid-lines, rgba(255, 255, 255, 0.1));
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.status-history-chart__grid-line-vertical.status-history-chart__grid-line--bold {
  background-color: var(--chart-axes, rgba(255, 255, 255, 0.3));
}

/* X轴刻度标记 */
.status-history-chart__x-tick-mark {
  width: 1px;
  height: 4px;
  background-color: var(--chart-ticks, rgba(255, 255, 255, 0.35));
  flex-shrink: 0;
}

/* 水平网格线容器 */
.status-history-chart__grid-lines-horizontal {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  pointer-events: none;
}

.status-history-chart__grid-line-horizontal {
  display: flex;
  align-items: center;
  width: 100%;
  height: 1px;
}

/* Y轴刻度标记 */
.status-history-chart__y-tick-mark {
  width: 4px;
  height: 1px;
  background-color: var(--chart-ticks, rgba(255, 255, 255, 0.35));
  flex-shrink: 0;
}

.status-history-chart__grid-line-horizontal-line {
  flex: 1 0 0;
  height: 1px;
  background-color: var(--chart-grid-lines, rgba(255, 255, 255, 0.1));
  min-width: 1px;
}

/* 底部X轴线 */
.status-history-chart__x-axis-line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: var(--chart-axes, rgba(255, 255, 255, 0.3));
  pointer-events: none;
}

/* 数据线 */
.status-history-chart__line {
  stroke-width: 2;
  fill: none;
  vector-effect: non-scaling-stroke;
}

.status-history-chart__line--maintenance {
  stroke: var(--color-warning, #ffd732);
}

.status-history-chart__line--errors {
  stroke: var(--color-alarm, #ff2640);
}

.status-history-chart__line--offline {
  stroke: var(--color-neutral, #b9b9b6);
}

/* 数据点 - HTML 元素，固定大小 */
.status-history-chart__point {
  position: absolute;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  z-index: 2;
}

.status-history-chart__point--maintenance {
  background-color: var(--color-warning, #ffd732);
}

.status-history-chart__point--errors {
  background-color: var(--color-alarm, #ff2640);
}

.status-history-chart__point--offline {
  background-color: var(--color-neutral, #b9b9b6);
}

/* X轴刻度 */
.status-history-chart__x-axis {
  position: relative;
  margin-left: 29px;
  width: calc(100% - 29px);
  height: 18px;
}

.status-history-chart__x-tick {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--typography-family-font-sans, 'Siemens Sans Global', sans-serif);
  font-weight: var(--font-weight-font-weight-bold, 700);
  font-size: var(--font-size-ms--1, 12px);
  line-height: 1.5;
  letter-spacing: 0.144px;
  color: var(--color-std-text, white);
  text-align: center;
  flex-shrink: 0;
  transform: translateX(-50%);
}

/* 图例 */
.status-history-chart__legend {
  display: flex;
  gap: 16px;
  align-items: center;
}

.status-history-chart__legend-item {
  display: flex;
  gap: 8px;
  height: 18px;
  align-items: center;
  flex-shrink: 0;
}

.status-history-chart__legend-color {
  width: 24px;
  height: 12px;
  flex-shrink: 0;
}

.status-history-chart__legend-color--maintenance {
  background-color: var(--color-warning, #ffd732);
}

.status-history-chart__legend-color--errors {
  background-color: var(--color-alarm, #ff2640);
}

.status-history-chart__legend-color--offline {
  background-color: var(--color-neutral, #b9b9b6);
}

.status-history-chart__legend-label {
  font-family: var(--typography-family-font-sans, 'Siemens Sans Global', sans-serif);
  font-weight: var(--font-weight-font-weight-bold, 700);
  font-size: var(--font-size-ms--1, 12px);
  line-height: 1.5;
  letter-spacing: 0.144px;
  color: var(--color-std-text, white);
  flex-shrink: 0;
}
